<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Create Media File"
        VerticalAlignment="Top" Width="800" Height="400" WindowStartupLocation="Manual" MinWidth="500" MinHeight="350" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"  >
    <Grid Name="MainGrid" Margin="0,0,0,0">
        <TextBlock Name="PathNameTextBlock" Text="Path Name (strongly recommended to specify the full path.)" Margin="10,10,10,0" VerticalAlignment="Top" Height="19"/>
        <TextBox Name="PathNameTextBox" Text="" Margin="10,29,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="1" Padding="0,2,0,2"/>

        <Grid Margin="10,56,10,0" Height="50" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="0,0,6.6,0" Grid.Column="0">
                <TextBlock Name="FileTypeTextBlock" Text="File Type" VerticalAlignment="Top" Height="19"/>
                <ComboBox Name="FileTypeCombo" VerticalAlignment="Top" SelectedItem="0">
                    <TextBlock Name="FileType_PlainFile">Plain File</TextBlock>
                </ComboBox>
            </StackPanel>
            <StackPanel Margin="3.3,0,3.3,0" Grid.Column="1">
                <TextBlock Name="FileSizeTextBlock" Text="File Size (MiB)" VerticalAlignment="Top" Height="19"/>
                <TextBox Name="FileSizeTextBox" Text="" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="1" Padding="0,2,0,2"/>
            </StackPanel>
            <StackPanel Margin="6.6,0,0,0" Grid.Column="2">
                <TextBlock Name="BlockSizeTextBlock" Text="Block Size" VerticalAlignment="Top" Height="19"/>
                <ComboBox Name="BlockSizeCombo" VerticalAlignment="Top" SelectedItem="0">
                    <TextBlock>512</TextBlock>
                    <TextBlock>4096</TextBlock>
                </ComboBox>
            </StackPanel>
        </Grid>
        <Button Name="CreateButton" Content="Create" Margin="0,111,10,0" TabIndex="8" HorizontalAlignment="Right" Width="83" Height="23" VerticalAlignment="Top"/>
        <ListView Name="StatusListView" Margin="10,142,10,38">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn x:Name="StatusListView_PID" Header="PID" DisplayMemberBinding="{Binding PID}" Width="50" />
                        <GridViewColumn x:Name="StatusListView_PathName" Header="Path Name" DisplayMemberBinding="{Binding PathName}" Width="200" />
                        <GridViewColumn x:Name="StatusListView_FileType" Header="File Type" DisplayMemberBinding="{Binding FileType}" Width="75" />
                        <GridViewColumn x:Name="StatusListView_Status" Header="Status" DisplayMemberBinding="{Binding Status}" Width="75" />
                        <GridViewColumn x:Name="StatusListView_Progress" Header="Progress" DisplayMemberBinding="{Binding Progress}" Width="75" />
                        <GridViewColumn x:Name="StatusListView_Message" Header="Message" DisplayMemberBinding="{Binding Message}" Width="200" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="KillButton" Content="Kill" Margin="10,0,0,10" Width="83" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
    </Grid>


</Window>
    