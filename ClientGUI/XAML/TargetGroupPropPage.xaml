<Grid
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MinWidth="350" MinHeight="100" >

    <StackPanel>
        <TextBlock Name="Title" Text="Target Group" VerticalAlignment="Top" Height="27" FontSize="18" Padding="0,0,0,0"/>

        <!-- Status -->
        <Expander Name="StatusExpander" Header="Status" Margin="10,2,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="0">
            <StackPanel Margin="10,2,0,2">
                <StackPanel Orientation="Horizontal">
                    <Image Name="CurrentStatusImage" Width="24" Height="24" />
                    <TextBlock Grid.Column="0" Name="CurrentStatusTextBlock" Text="Active" Padding="0,0,0,0" VerticalAlignment="Center" Grid.Row="1" Width="156" TextTrimming="CharacterEllipsis" Margin="5,0,0,0" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="29,2,5,2" >
                    <Button Name="ActivateButton" Content="Activate" Width="60" Margin="0,2,5,2" TabIndex="1"/>
                    <Button Name="LoadButton" Content="Load" Width="60" Margin="5,2,5,2" TabIndex="2"/>
                    <Button Name="InactivateButton" Content="Inactivate" Width="60" Margin="5,2,5,2" TabIndex="3"/>
                    <Button Name="UnloadButton" Content="Unload" Width="60" Margin="5,2,0,2" TabIndex="4"/>
                </StackPanel>
            </StackPanel>
        </Expander>

        <!-- Sessions -->
        <Expander Name="SessionsExpander" Header="Sessions" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="5">
            <StackPanel>
                <TextBlock Name="SessionListTextBlock" Text="Sessions List" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <TreeView Name="SessionTree" Height="200" Margin="10,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" />
                <Grid>
                    <Button Name="DestroySessionButton" Content="Destroy Session" HorizontalAlignment="Right" Width="150" Margin="10,5,0,5" TabIndex="7"/>
                </Grid>

                <TextBlock Name="SessionParamsTextBlock" Text="Parameters" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <ListView Name="SessionParametersListView" Height="200" Margin="10,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="8">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Parameter Name" DisplayMemberBinding="{Binding Name}" Width="150" />
                                <GridViewColumn Header="Parameter Value" DisplayMemberBinding="{Binding Value}" Width="150" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <TextBlock Name="UsageTextBlock" Text="Usage" Margin="0,0,0,0" Padding="0,0,0,0" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <Grid Margin="10,0,0,0">
                    <TextBlock Name="ReceiveBytesTextBlock" Text="Receive Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="ReceiveBytesHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" HorizontalAlignment="Right" Width="150" TextAlignment="Right" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="ReceiveBytesCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
                <Grid Margin="10,0,0,0">
                    <TextBlock Name="SendBytesTextBlock" Text="Send Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="SendBytesHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" TextAlignment="Right" HorizontalAlignment="Right" Width="150" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="SendBytesCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
            </StackPanel>
        </Expander>

        <!-- Configuration -->
        <Expander Name="ConfigurationExpander" Header="Configuration" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="9">
            <StackPanel>
                <StackPanel Margin="5,2,0,2" Orientation="Horizontal">
                    <Button Name="EditButton" Content="Edit" Width="60" Margin="5,2,5,2" TabIndex="10" />
                    <Button Name="ApplyButton" Content="Apply" Width="60" Margin="5,2,5,2" TabIndex="11" />
                    <Button Name="DiscardButton" Content="Discard" Width="60" Margin="5,2,5,2" TabIndex="12" />
                </StackPanel>
                <TextBlock Name="ErrorMessageLabel" Text="" Margin="5,2,0,2" TextTrimming="CharacterEllipsis"/>

                <!-- Device Name -->
                <Grid Margin="5,2,0,2">
                    <StackPanel>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetGroupIDTextBlock" Text="Target Group ID" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="TargetGroupIDTextBox" Text="0" Padding="2,2,2,2" TabIndex="13" />
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetGroupNameTextBlock" Text="Target Group Name" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="TargetGroupNameTextBox" Text="0" TabIndex="14" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="EnableAtStartTextBlock" Text="Enable At Start" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <ComboBox Grid.Column="1" Name="EnableAtStartCombo" SelectedIndex="0" TabIndex="15">
                                <TextBlock>True</TextBlock>
                                <TextBlock>False</TextBlock>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Expander>



    </StackPanel>
</Grid>
    