<Grid
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MinWidth="350" MinHeight="100" >

    <StackPanel>
        <TextBlock Name="Title" Text="Target" VerticalAlignment="Top" Height="27" FontSize="18" Padding="0,0,0,0"/>

        <!-- Sessions -->
        <Expander Name="SessionsExpander" Header="Sessions" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="0">
            <StackPanel>
                <TextBlock Name="SessionListTextBlock" Text="Sessions List" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <TreeView Name="SessionTree" Height="200" Margin="10,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="1" />
                <Grid>
                    <Button Name="DestroySessionButton" Content="Destroy Session" HorizontalAlignment="Right" Width="150" Margin="10,5,0,5" TabIndex="-1"/>
                </Grid>

                <TextBlock Name="SessionParamsTextBlock" Text="Parameters" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <ListView Name="SessionParametersListView" Height="200" Margin="10,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="3">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Parameter Name" DisplayMemberBinding="{Binding Name}" Width="150" />
                                <GridViewColumn Header="Parameter Value" DisplayMemberBinding="{Binding Value}" Width="150" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <TextBlock Name="UsageTextBlock" Text="Usage" Margin="0,0,0,0" Padding="0,0,0,0" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <Grid Margin="10,0,0,0">
                    <TextBlock Name="ReceiveBytesTextBlock" Text="Receive Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="ReceiveBytesHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" HorizontalAlignment="Right" Width="150" TextAlignment="Right" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="ReceiveBytesCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
                <Grid Margin="10,0,0,0">
                    <TextBlock Name="SendBytesTextBlock" Text="Send Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="SendBytesHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" TextAlignment="Right" HorizontalAlignment="Right" Width="150" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="SendBytesCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
            </StackPanel>
        </Expander>

        <!-- Configuration -->
        <Expander Name="ConfigurationExpander" Header="Configuration" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="4">
            <StackPanel>
                <StackPanel Margin="5,2,0,2" Orientation="Horizontal">
                    <Button Name="EditButton" Content="Edit" Width="60" Margin="5,2,5,2" TabIndex="5" />
                    <Button Name="ApplyButton" Content="Apply" Width="60" Margin="5,2,5,2" TabIndex="6" />
                    <Button Name="DiscardButton" Content="Discard" Width="60" Margin="5,2,5,2" TabIndex="7" />
                </StackPanel>
                <TextBlock Name="ErrorMessageLabel" Text="" Margin="5,2,0,2" TextTrimming="CharacterEllipsis"/>

                <Grid Margin="5,2,0,2">
                    <StackPanel>
                        <!-- Node Configuration -->
                        <TextBlock Name="NodeConfigurationTextBlock" Text="Node Configuration" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis"/>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetIDTextBlock" Text="Target ID" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="TargetIDTextBox" Text="0" Padding="2,2,2,2" TabIndex="8" />
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetPortalGroupTagTextBlock" Text="Target Portal Group Tag" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="1" Name="TargetPortalGroupTagValueTextBlock" Text="0" Padding="2,2,2,2" TextTrimming="CharacterEllipsis" />
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetNameTextBlock" Text="Target Name" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <Grid Grid.Column="1">
                                <TextBox  Name="TargetNameTextBox" Text="0" TabIndex="9" Padding="2,2,2,2" Margin="0,0,30,0"/>
                                <Button Name="GenTargetNameButton" Content='...' TabIndex="10" Padding="2,2,2,2" HorizontalAlignment="Right" Width="25"/>
                            </Grid>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetAliasTextBlock" Text="Target Alias" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="TargetAliasTextBox" Padding="2,2,2,2" Text="" TabIndex="11" />
                        </Grid>
                        <!-- Authentification -->
                        <TextBlock Name="AuthTitleTextBlock" Text="Authentification" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis"/>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="AuthTypeTextBlock" Text="Enable Authentification" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <ComboBox Grid.Column="1" Name="AuthTypeCombo" Text="" TabIndex="12" >
                                <TextBlock>True</TextBlock>
                                <TextBlock>False</TextBlock>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <StackPanel>
                                <TextBlock Grid.Column="0" Name="InitiatorAuthTextBlock" Text="Initiator" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                <Grid Margin="0,2,0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Name="InitiatorAuthUserNameTextBlock" Text="User Name" Margin="10,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                    <TextBox Grid.Column="1" Name="InitiatorAuthUserNameTextBox" Padding="2,2,2,2" Text="" TabIndex="13" />
                                </Grid>
                                <Grid Margin="0,2,0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Name="InitiatorAuthPasswordTextBlock" Text="Password" Margin="10,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                    <TextBox Grid.Column="1" Name="InitiatorAuthPasswordTextBox" Padding="2,2,2,2" Text="" TabIndex="14" />
                                </Grid>
                                <TextBlock Grid.Column="0" Name="TargetAuthTextBlock" Text="Target" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                <Grid Margin="0,2,0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Name="TargetAuthUserNameTextBlock" Text="User Name" Margin="10,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                    <TextBox Grid.Column="1" Name="TargetAuthUserNameTextBox" Padding="2,2,2,2" Text="" TabIndex="15" />
                                </Grid>
                                <Grid Margin="0,2,0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Name="TargetAuthPasswordTextBlock" Text="Password" Margin="10,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                                    <TextBox Grid.Column="1" Name="TargetAuthPasswordTextBox" Padding="2,2,2,2" Text="" TabIndex="16" />
                                </Grid>
                            </StackPanel>
                        </Grid>
                        <!-- Authentification -->
                        <TextBlock Name="LogicalUnitTitleTextBlock" Text="Logical Unit" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis"/>
                        <ListView Name="LogicalUnitListView" Height="200" Margin="10,2,0,2" TabIndex="17" >
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Header="Con" Width="40">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding Connected, Mode=TwoWay}"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="LU Name" DisplayMemberBinding="{Binding LUName}" Width="150"/>
                                        <GridViewColumn Header="LUN" DisplayMemberBinding="{Binding LUN}" Width="150" />
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Expander>



    </StackPanel>
</Grid>
    