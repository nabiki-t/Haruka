<Grid
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MinWidth="350" MinHeight="100" >

    <StackPanel>
        <TextBlock Name="Title" Text="Target Device" VerticalAlignment="Top" Height="27" FontSize="18" Padding="0,0,0,0"/>

        <!-- Status -->
        <Expander Name="StatusExpander" Header="Status" Margin="10,2,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="0">
            <StackPanel>
                <TextBlock Name="CurrentStatusLabelTextBlock" Text="Current Status" Margin="0,0,0,0" Padding="0,0,0,0" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                <Grid Margin="10,2,0,2">
                    <StackPanel Orientation="Horizontal">
                        <Image Name="CurrentStatusImage" Width="24" Height="24" />
                        <TextBlock Grid.Column="0" Name="CurrentStatusTextBlock" Text="Running" Padding="0,0,0,0" VerticalAlignment="Center" Grid.Row="1" Width="156" TextTrimming="CharacterEllipsis" Margin="5,0,0,0" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="130" >
                        <Button Name="StartButton" Content="Start" Width="60" Margin="0,2,5,2" TabIndex="1"/>
                        <Button Name="StopButton" Content="Stop" Width="60" Margin="5,2,0,2" TabIndex="2"/>
                    </StackPanel>
                </Grid>
                <StackPanel>
                    <TextBlock Name="CurrentLogParamLabelTextBlock" Text="Current Log Parameters" Margin="0,0,0,0" Padding="0,0,0,0" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                    <Grid Margin="10,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="6*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Name="CurrentSoftLimitTextBlock" Text="Soft Limit" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                        <TextBox Grid.Column="1" Name="CurrentSoftLimitTextBox" Text="2000"  TabIndex="3" Padding="2,2,2,2"/>
                    </Grid>
                    <Grid Margin="10,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="6*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Name="CurrentHardLimitTextBlock" Text="Hard Limit" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                        <TextBox Grid.Column="1" Name="CurrentHardLimitTextBox" Text="5000" TabIndex="4" Padding="2,2,2,2" />
                    </Grid>
                    <Grid Margin="10,2,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="6*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Name="CurrentLogLevelTextBlock" Text="Log Level" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                        <ComboBox Grid.Column="1" Name="CurrentLogLevelCombo" SelectedIndex="0" TabIndex="5">
                            <TextBlock>VERBOSE</TextBlock>
                            <TextBlock>INFO</TextBlock>
                            <TextBlock>WARNING</TextBlock>
                            <TextBlock>ERROR</TextBlock>
                            <TextBlock>FAILED</TextBlock>
                            <TextBlock>OFF</TextBlock>
                        </ComboBox>
                    </Grid>
                    <TextBlock Name="SetCurLogParamErrorMessageLabel" Text="" Margin="5,2,0,2" TextTrimming="CharacterEllipsis" />
                    <StackPanel Orientation="Horizontal" Grid.RowSpan="3" HorizontalAlignment="Right" Width="130" >
                        <Button Name="ApplyCurLogParamButton" Content="Apply" Width="60" Margin="0,2,5,2" TabIndex="6"/>
                        <Button Name="LoadCurLogParamButton" Content="Load" Width="60" Margin="5,2,0,2" TabIndex="7"/>
                    </StackPanel>

                </StackPanel>

            </StackPanel>

        </Expander>

        <!-- Sessions -->
        <Expander Name="SessionsExpander" Header="Sessions" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="8">
            <StackPanel>
                <TextBlock Name="SessionListTextBlock" Text="Sessions List" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <TreeView Name="SessionTree" Height="200" Margin="10,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="9" />
                <Grid>
                    <Button Name="DestroySessionButton" Content="Destroy Session" HorizontalAlignment="Right" Width="150" Margin="10,5,0,5" TabIndex="10"/>
                </Grid>

                <TextBlock Name="SessionParamsTextBlock" Text="Parameters" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <ListView Name="SessionParametersListView" Height="200" Margin="10,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="11">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Parameter Name" DisplayMemberBinding="{Binding Name}" Width="150" />
                                <GridViewColumn Header="Parameter Value" DisplayMemberBinding="{Binding Value}" Width="150" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <TextBlock Name="UsageTextBlock" Text="Usage" Margin="0,0,0,0" Padding="0,0,0,0" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <Grid Margin="10,0,0,0">
                    <TextBlock Name="ReceiveBytesTextBlock" Text="Receive Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="ReceiveBytesHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" HorizontalAlignment="Right" Width="150" TextAlignment="Right" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="ReceiveBytesCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
                <Grid Margin="10,0,0,0">
                    <TextBlock Name="SendBytesTextBlock" Text="Send Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="SendBytesHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" TextAlignment="Right" HorizontalAlignment="Right" Width="150" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="SendBytesCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
            </StackPanel>
        </Expander>

        <!-- Configuration -->
        <Expander Name="ConfigurationExpander" Header="Configuration" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="12">
            <StackPanel>
                <StackPanel Margin="5,2,0,2" Orientation="Horizontal">
                    <Button Name="EditButton" Content="Edit" Width="60" Margin="5,2,5,2" TabIndex="13" />
                    <Button Name="ApplyButton" Content="Apply" Width="60" Margin="5,2,5,2" TabIndex="14" />
                    <Button Name="DiscardButton" Content="Discard" Width="60" Margin="5,2,5,2" TabIndex="15" />
                </StackPanel>
                <TextBlock Name="ErrorMessageLabel" Text="" Margin="5,2,0,2" TextTrimming="CharacterEllipsis"/>

                <!-- Device Name -->
                <Grid Margin="5,2,0,2">
                    <StackPanel>
                        <TextBlock Name="NodeConfigurationTextBlock" Text="Node Configuration" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis"/>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetDeviceIDTextBlock" Text="Target Device ID" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="TargetDeviceIDTextBox" Text="0" TabIndex="16" Padding="2,2,2,2" />
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetDeviceNameTextBlock" Text="Target Device Name" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="TargetDeviceNameTextBox" Text="0" TabIndex="17" Padding="2,2,2,2"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                <!-- Negotiable Parameters -->
                <Grid Margin="5,2,0,2">
                    <StackPanel>
                        <TextBlock Name="NegotiableParametersTextBlock" Text="Negotiable Parameters" Margin="0,0,0,0" Padding="0,0,0,0" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="MaxRecvDataSegmentLengthTextBlock" Text="MaxRecvDataSegmentLength" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="MaxRecvDataSegmentLengthTextBox" Text="0" TabIndex="18" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="MaxBurstLengthTextBlock" Text="MaxBurstLength" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="MaxBurstLengthTextBox" Text="0" TabIndex="19" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="FirstBurstLengthTextBlock" Text="FirstBurstLength" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="FirstBurstLengthTextBox" Text="0" TabIndex="20" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="DefaultTime2WaitTextBlock" Text="DefaultTime2Wait" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="DefaultTime2WaitTextBox" Text="0" TabIndex="21" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="DefaultTime2RetainTextBlock" Text="DefaultTime2Retain" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="DefaultTime2RetainTextBox" Text="0" TabIndex="22" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="MaxOutstandingR2TTextBlock" Text="MaxOutstandingR2T" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="MaxOutstandingR2TTextBox" Text="0" TabIndex="23" Padding="2,2,2,2"/>
                        </Grid>
                    </StackPanel>
                </Grid>

                <!-- Log Parameters -->
                <Grid Margin="5,2,0,2">
                    <StackPanel>
                        <TextBlock Name="LogParametersTextBlock" Text="Log Parameters" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis"/>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="SoftLimitTextBlock" Text="Soft Limit" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="SoftLimitTextBox" Text="2000" TabIndex="24" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="HardLimitTextBlock" Text="Hard Limit" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="HardLimitTextBox" Text="5000" TabIndex="25" Padding="2,2,2,2" />
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="LogLevelTextBlock" Text="Log Level" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <ComboBox Grid.Column="1" Name="LogLevelCombo" SelectedIndex="0" TabIndex="26">
                                <TextBlock>VERBOSE</TextBlock>
                                <TextBlock>INFO</TextBlock>
                                <TextBlock>WARNING</TextBlock>
                                <TextBlock>ERROR</TextBlock>
                                <TextBlock>FAILED</TextBlock>
                                <TextBlock>OFF</TextBlock>
                            </ComboBox>
                        </Grid>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Expander>



    </StackPanel>
</Grid>
    