<Grid
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MinWidth="350" MinHeight="100" >

    <StackPanel>
        <TextBlock Name="Title" Text="Network Portal" VerticalAlignment="Top" Height="27" FontSize="18" Padding="0,0,0,0"/>

        <!-- Connections -->
        <Expander Name="ConnectionExpander" Header="Connections" Margin="10,2,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="0">
            <StackPanel>
                <!-- Connection List -->
                <TextBlock Name="ConnectionListTextBlock" Text="Connections List" Margin="0,5,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <ListView Name="ConnectionList" Height="200" Margin="10,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="-5" >
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="TSIH" DisplayMemberBinding="{Binding TSIH}" Width="75"/>
                                <GridViewColumn Header="CID" DisplayMemberBinding="{Binding CID}" Width="75" />
                                <GridViewColumn Header="Counter" DisplayMemberBinding="{Binding ConCnt}" Width="75" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <!-- Parameters -->
                <TextBlock Name="ConnectionParamsTextBlock" Text="Parameters" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <ListView Name="ConnectionParametersListView" Height="200" Margin="10,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="2">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Parameter Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                <GridViewColumn Header="Parameter Value" DisplayMemberBinding="{Binding Value}" Width="150" />
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
                <!-- Usage Per Connection -->
                <TextBlock Name="UsagePerConnectionTextBlock" Text="Usage Per Connection" Margin="0,5,0,0" Padding="0,0,0,0" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" TextTrimming="CharacterEllipsis" />
                <Grid Margin="10,5,0,0">
                    <TextBlock Name="ReceiveBytesPerConnectionTextBlock" Text="Receive Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="ReceiveBytesPerConnectionHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" HorizontalAlignment="Right" Width="150" TextAlignment="Right" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="ReceiveBytesPerConnectionCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
                <Grid Margin="10,5,0,0">
                    <TextBlock Name="SendBytesPerConnectionTextBlock" Text="Send Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="SendBytesPerConnectionHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" TextAlignment="Right" HorizontalAlignment="Right" Width="150" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="SendBytesPerConnectionCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
            </StackPanel>
        </Expander>

        <!-- Total Usage -->
        <Expander Name="TotalUsageExpander" Header="Total Usage" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="3">
            <StackPanel>
                <Grid Margin="10,5,0,0">
                    <TextBlock Name="TotalReceiveBytesTextBlock" Text="Receive Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="TotalReceiveBytesHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" HorizontalAlignment="Right" Width="150" TextAlignment="Right" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="TotalReceiveBytesCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
                <Grid Margin="10,5,0,0">
                    <TextBlock Name="TotalSendBytesTextBlock" Text="Send Bytes" Margin="0,0,105,0" Padding="0,0,0,0" TextTrimming="CharacterEllipsis" />
                    <TextBlock Name="TotalSendBytesHeightTextBlock" Text="0K Bytes/s" Padding="0,0,0,0" TextAlignment="Right" HorizontalAlignment="Right" Width="150" TextTrimming="CharacterEllipsis" />
                </Grid>
                <Canvas Name="TotalSendBytesCanvas" Height="150" Margin="10,0,0,0" Background="White"/>
            </StackPanel>
        </Expander>

    <!-- Configuration -->
        <Expander Name="ConfigurationExpander" Header="Configuration" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="4">
            <StackPanel>
                <StackPanel Margin="5,2,0,2" Orientation="Horizontal">
                    <Button Name="EditButton" Content="Edit" Width="60" Margin="5,2,5,2" TabIndex="5" />
                    <Button Name="ApplyButton" Content="Apply" Width="60" Margin="5,2,5,2" TabIndex="6" />
                    <Button Name="DiscardButton" Content="Discard" Width="60" Margin="5,2,5,2" TabIndex="7" />
                </StackPanel>
                <TextBlock Name="ErrorMessageLabel" Text="" Margin="5,2,0,2" TextTrimming="CharacterEllipsis"/>

                <!-- Device Name -->
                <Grid Margin="5,2,0,2">
                    <StackPanel>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="NetworkPortalIDTextBlock" Text="Network Portal ID" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="NetworkPortalIDTextBox" Text="0" Padding="2,2,2,2" TabIndex="8" />
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetPortalGroupTagTextBlock" Text="Target Portal Group Tag" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBlock Grid.Column="1" Name="TargetPortalGroupTagValueTextBlock" Text="0" Padding="2,2,2,2" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="TargetAddressTextBlock" Text="Target Address" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="TargetAddressTextBox" Text="" TabIndex="9" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="PortNumberTextBlock" Text="Port Number" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="PortNumberTextBox" Text="" TabIndex="8" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="DisableNagleTextBlock" Text="Disable Nagle" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <ComboBox Name="DisableNagleCombo" Grid.Column="1" AllowDrop="True" Focusable="False" TabIndex="11">
                                <TextBlock>True</TextBlock>
                                <TextBlock>False</TextBlock>
                            </ComboBox>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="ReceiveBufferSizeTextBlock" Text="Receive Buffer Size" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="ReceiveBufferSizeTextBox" Text="8192" TabIndex="12" Padding="2,2,2,2"/>
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="SendBufferSizeTextBlock" Text="Send Buffer Size" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="SendBufferSizeTextBox" Text="8192" TabIndex="12" Padding="2,2,2,2"/>
                        </Grid>
                        <StackPanel Margin="10,2,0,2">
                            <TextBlock Name="IPWhiteListTextBlock" Text="IP White List" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <Grid Margin="10,0,0,0">
                                <StackPanel HorizontalAlignment="Right" Width="20">
                                    <Button Name="AddIPWhiteListButton" Content="&#xE710;" FontFamily="Segoe MDL2 Assets" Margin="0,0,0,0" TabIndex="15" />
                                    <Button Name="RemoveIPWhiteListButton" Content="&#xE738;" FontFamily="Segoe MDL2 Assets" Margin="0,2,0,0" TabIndex="16" />
                                </StackPanel>
                                <ListBox Name="IPWhiteListListBox" Height="120" TabIndex="14" DockPanel.Dock="Top" Margin="0,0,25,0" />
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Expander>



    </StackPanel>
</Grid>
    