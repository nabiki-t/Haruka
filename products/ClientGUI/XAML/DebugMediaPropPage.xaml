<Grid
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        MinWidth="350" MinHeight="100" >

    <StackPanel>
        <TextBlock Name="Title" Text="Debug Media" VerticalAlignment="Top" Height="27" FontSize="18" Padding="0,0,0,0"/>

        <!-- Configuration -->
        <Expander Name="ConfigurationExpander" Header="Configuration" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="0">
            <StackPanel>
                <StackPanel Margin="5,2,0,2" Orientation="Horizontal">
                    <Button Name="EditButton" Content="Edit" Width="60" Margin="5,2,5,2" TabIndex="1" />
                    <Button Name="ApplyButton" Content="Apply" Width="60" Margin="5,2,5,2" TabIndex="2" />
                    <Button Name="DiscardButton" Content="Discard" Width="60" Margin="5,2,5,2" TabIndex="3" />
                </StackPanel>
                <TextBlock Name="ErrorMessageLabel" Text="" Margin="5,2,0,2" TextTrimming="CharacterEllipsis"/>

                <Grid Margin="5,2,0,2">
                    <StackPanel>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="IdentNumberTextBlock" Text="Ident Number" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="IdentNumberTextBox" Text="0" Padding="2,2,2,2" TabIndex="4" />
                        </Grid>
                        <Grid Margin="10,2,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="6*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Name="MediaNameTextBlock" Text="Media Name" Padding="0,0,0,0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
                            <TextBox Grid.Column="1" Name="MediaNameTextBox" Text="" Padding="2,2,2,2" TabIndex="5" />
                        </Grid>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Expander>

        <!-- Traps -->
        <Expander Name="TrapExpander" Header="Traps" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="6">
            <StackPanel>
                <Grid Margin="10,0,0,0">
                    <StackPanel HorizontalAlignment="Right" Width="20">
                        <Button Name="AddTrapButton" Content="&#xE710;" FontFamily="Segoe MDL2 Assets" Margin="0,0,0,0" TabIndex="8" />
                        <Button Name="ClearTrapButton" Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Margin="0,2,0,0" TabIndex="9" />
                    </StackPanel>

                    <ListView Name="TrapListView" Height="150" Margin="10,0,25,0" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="7">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="Event" DisplayMemberBinding="{Binding Event}" Width="150" />
                                    <GridViewColumn Header="Action" DisplayMemberBinding="{Binding Action}" Width="150" />
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </StackPanel>
        </Expander>

        <!-- WaitTasks -->
        <Expander Name="WaitTasksExpander" Header="Wait Tasks" Margin="10,10,5,2" VerticalAlignment="Top" IsExpanded="True" TabIndex="10">
            <StackPanel>
                <Grid Margin="10,0,0,0">
                    <Button Name="TaskResumeButton" Content="Resume" TabIndex="12" HorizontalAlignment="Right" Width="83" Height="20" VerticalAlignment="Bottom" />

                    <ListView Name="WaitTasksListView" Height="150" Margin="10,0,0,25" ScrollViewer.HorizontalScrollBarVisibility="Visible" TabIndex="11">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="150" />
                                    <GridViewColumn Header="TSIH" DisplayMemberBinding="{Binding TSIH}" Width="50" />
                                    <GridViewColumn Header="ITT" DisplayMemberBinding="{Binding ITT}" Width="50" />
                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </StackPanel>
        </Expander>


    </StackPanel>
</Grid>
    